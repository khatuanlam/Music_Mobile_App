<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF0000" /> <!-- Màu nền khi button được nhấn -->
            <corners android:radius="16dp" /> <!-- Bán kính bo tròn của nút -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#1fdf64" /> <!-- Màu nền mặc định của button -->
            <corners android:radius="16dp" /> <!-- Bán kính bo tròn của nút -->
        </shape>
    </item>
</selector>