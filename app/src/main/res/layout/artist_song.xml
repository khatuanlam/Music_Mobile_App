<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_song.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/black">


    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/ArtistTrackImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sontungmtp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/ArtistsongTitle"
            android:layout_width="227dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Em của ngày hôm qua"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/listeners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="42.000.000"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/overflowSongmenu"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_overflow"
        android:layout_gravity="center"
        android:background="@color/black"/>
</LinearLayout>
