<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_song.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/black">



<!--    <TextView-->
<!--        android:id="@+id/textViewPosition"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="1."-->
<!--        android:textSize="20dp"-->
<!--        android:textColor="@color/white"/>-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sontungmtp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="227dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Em của ngày hôm qua"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/artistname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sơn Tùng M-TP"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>




    <ImageButton
        android:id="@+id/overflowButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="showOverflowMenu"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_like_black_24dp"
        android:layout_gravity="center"
        android:contentDescription="TODO" />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_overflow">
    </Button>
</LinearLayout>
