<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SubSearchFragment">

    <LinearLayout
        android:id="@+id/container_search_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorGrayLight"
        android:focusable="false"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_subSearchBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingHorizontal="10dp"
            android:src="@drawable/ic_arrow_back_24dp" />

        <EditText
            android:id="@+id/search_subSearchTextBox"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayLight"
            android:fontFamily="@font/gotham_bold"
            android:hint="Bạn muốn nghe gì?"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_subSearchMainFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_search_input" />


</androidx.constraintlayout.widget.ConstraintLayout>