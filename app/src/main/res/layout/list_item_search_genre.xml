<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_search_genre_cardview"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">

<ImageView
    android:id="@+id/list_item_search_genre_imageview"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:rotation="40"
    android:translationX="40dp"
    android:src="@drawable/main_logo_white" />  <!-- Ảnh hình vuông -->

<TextView
    android:id="@+id/list_item_search_genre_textview"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_toLeftOf="@id/list_item_search_genre_imageview" />

</RelativeLayout>

    </androidx.cardview.widget.CardView>