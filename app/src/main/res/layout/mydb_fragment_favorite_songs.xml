<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mydatabase.favorite.AllFavoriteSongsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="false"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mydb_favorite_songs_fragment_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/ic_arrow_back_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:text="Đã thích"
                android:textColor="@color/white"
                android:textSize="27dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/mydb_fav_songs_btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_play"
            android:textAlignment="center" />
    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/mydb_favorite_songs_fragment_songs_recyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_margin="5dp" />

            </LinearLayout>

    </LinearLayout>



</FrameLayout>