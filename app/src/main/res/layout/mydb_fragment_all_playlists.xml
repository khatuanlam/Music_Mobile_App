<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mydatabase.favorite.AllFavoriteSongsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="false"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/mydb_all_playlists_fragment_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/ic_arrow_back_24dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_bold"
                android:text="Playlist của bạn"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="27dp" />

            <Button
                android:id="@+id/mydb_all_playlists_fragment_addPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginLeft="10dp"
                android:text="   +   "
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mydb_all_playlists_fragment_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>